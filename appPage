  <script>
    
    window.addEventListener("scroll", function() {
      const scrollPosition = window.scrollY;
      const maxScroll = document.body.scrollHeight - window.innerHeight;    
      const scrollPercentage = scrollPosition / maxScroll;     
      document.body.style.background = `linear-gradient(to bottom, #DAD7CD, rgba(163, 177, 138, ${scrollPercentage + 0.5}))`;
      const navbar = document.getElementById("navbar");
      navbar.style.background = `linear-gradient(to right, rgba(58, 90, 64, ${1 - scrollPercentage}), rgba(88, 129, 87, ${scrollPercentage + 0.5}))`;
    });
  </script>
